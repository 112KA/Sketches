{
  "compilerOptions": {
    "baseUrl": "packages",
    "sourceMap": true,
    "outDir": "./.temp",
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "lib": ["es2018", "dom"],
    "paths": {
      "x/*": ["x/src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },

  "references": [
    {
      "path": "packages/x"
    }
  ],

  // "include": ["packages"],
  "exclude": ["node_modules", "dist"]
}
